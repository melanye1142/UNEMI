Algoritmo Identificar_un_numero
	// Declaramos la variable
    Definir numero Como Real
	
    // Pedimos al usuario que ingrese un número
    Escribir "Ingrese un número:"
    Leer numero
	
    // Verificamos si el número es negativo y menor que -20
    Si numero < -20 Entonces
        Escribir "El número es negativo y menor que -20."
    Sino
        // Verificamos si el número es positivo
        Si numero > 0 Entonces
            // Verificamos si es par
            Si numero % 2 = 0 Entonces
                Escribir "El número es positivo y par."
            Sino
                // Verificamos si es impar y múltiplo de 7
                Si numero % 7 = 0 Entonces
                    Escribir "El número es positivo, impar y múltiplo de 7."
                Sino
                    Escribir "El número es positivo e impar."
                FinSi
            FinSi
        Sino
            // Si el número es 0 o negativo pero no menor que -20
            Escribir "El número no cumple con las condiciones especificadas."
        FinSi
    FinSi
FinAlgoritmo
